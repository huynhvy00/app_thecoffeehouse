<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.taikhoan.TaiKhoanFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:background="@color/gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_margin="15dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp">
                <ImageView
                    android:id="@+id/img_454"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ad"

                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:id="@+id/tv_name_454"
                    android:layout_marginBottom="5dp"
                    android:text="Vy Vy"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Khách hàng mới"/>

            </LinearLayout>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/cf"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_baseline_grade_24"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:id="@+id/tttv_454"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    android:text="The Coffee Hourse Rewwards"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_perm_identity_24"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tttk_454"
                    android:layout_height="wrap_content"
                    android:text="Thông tin tài khoản"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_queue_music_24"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    android:text="Nhạc đang phát"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_history_24"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/lichsu_454"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_help_24"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:id="@+id/help_454"
                    android:layout_marginTop="3dp"
                    android:layout_height="wrap_content"
                    android:text="Giúp đỡ"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_settings_24"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/black"
                    android:id="@+id/caidat_454"
                    android:layout_height="wrap_content"
                    android:text="Cài đặt"
                    />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/btn_dangxuat_454"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Đăng xuất"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>